    "@ton/core": "^0.56.3",
    "@ton/crypto": "^3.2.0",
    "@ton/ton": "^13.11.1",
    "@tonconnect/sdk": "^3.0.0-beta.1",
    "@types/node": "^20.11.30",
    "axios": "^1.6.8",
    "buffer": "^6.0.3",
    "dotenv": "^16.0.3",
    "express": "^4.19.1",
    "mongoose": "^8.3.0",
    "node-telegram-bot-api": "^0.61.0",
    "nodemon": "^3.1.0",
    "qrcode": "^1.5.1",
    "redis": "^4.6.13",
    "ton": "^13.9.0",
    "ton-core": "^0.53.0",
